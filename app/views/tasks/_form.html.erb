<%= form_with(model: task, local: true) do |f| %>
  <p>
  <%= f.label :タイトル %><br><%= f.text_field :title %>
  </p>
  <!--仮--><p><%= f.text_field :priority %></p>
  <!--仮--><p><%= f.text_field :state %></p>
  <p>
  <%= f.label :終了期限 %><br><%= f.datetime_select :deadline %>
  </p>
  <p>
  <%= f.label :内容 %><br><%= f.text_area :contents %>
  </p>
  <%= f.submit '登録する' if action_name == 'new' %>
  <%= f.submit '更新する' if action_name == 'edit' %>
<% end %>
